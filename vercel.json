{
  "version": 2,
  "buildCommand": "npm install",
  "outputDirectory": "public",
  "functions": {
    "api/transcribe.js": { "maxDuration": 60 },
    "api/chat.js": { "maxDuration": 30 },
    "api/speak.js": { "maxDuration": 30 },
    "api/book.js": { "maxDuration": 30 },
    "api/auth/google.js": { "maxDuration": 10 },
    "api/auth/callback.js": { "maxDuration": 10 }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
